<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:MAUICrudApp.Pages"
       x:Class="MAUICrudApp.AppShell">

    <!-- User List Page -->
    <ShellContent Title="User List" Route="UserListPage" ContentTemplate="{DataTemplate pages:UserListPage}" />

    <!-- Edit User Page -->
    <ShellContent Title="Edit User" Route="EditUserPage" ContentTemplate="{DataTemplate pages:EditUserPage}" />

    <!-- Add User Page -->
    <ShellContent Title="Add User" Route="AddUserPage" ContentTemplate="{DataTemplate pages:AddUserPage}" />
</Shell>
